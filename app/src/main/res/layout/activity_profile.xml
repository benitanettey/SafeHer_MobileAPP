<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8FF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back arrow + title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnBackProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#7B1FA2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#7B1FA2"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Profile card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_rounded_white"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_person"
                    android:tint="#CE9AF5"
                    android:background="@drawable/circle_pale"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emily Johnson"
                    android:textSize="18sp"
                    android:textColor="#4A148C"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvProfileBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taking care of my mental wellness one day at a time"
                    android:textSize="14sp"
                    android:textColor="#7B1FA2"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_rounded_white"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#7B1FA2"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Active\nTaking a break"
                android:textColor="#6A1B9A"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
