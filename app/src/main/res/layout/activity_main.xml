<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8FF"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/layoutTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|end"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SafeHer"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#7B1FA2" />

        <ImageView
            android:id="@+id/btnProfile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person"
            android:tint="#7B1FA2"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            android:tint="#7B1FA2" />
    </LinearLayout>

    <!-- Date and Time -->
    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday, Oct 19 • 10:45 AM"
        android:textColor="#6A1B9A"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTopBar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Daily Check-In Card -->
    <LinearLayout
        android:id="@+id/card_daily_checkin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/card_gradient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDateTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Check-In"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you feeling today?"
            android:textColor="#4A148C"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btnOkay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="I’m Okay"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@drawable/rounded_primary_button"
                android:drawableStart="@drawable/ic_check_circle"
                android:drawablePadding="6dp"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnNotOkay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="I’m Not Okay"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@drawable/rounded_alert_button"
                android:drawableStart="@drawable/ic_warning"
                android:drawablePadding="6dp"
                android:textAllCaps="false"
                android:stateListAnimator="@null" />
        </LinearLayout>
    </LinearLayout>

    <!-- Wellness Journal -->
    <LinearLayout
        android:id="@+id/card_journal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/card_gradient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_daily_checkin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_book"
                android:tint="#7B1FA2"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wellness Journal"
                android:textStyle="bold"
                android:textColor="#4A148C"
                android:textSize="16sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etJournal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="How are you feeling today? Write down your thoughts..."
            android:minLines="3"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:textColor="#212121"
            android:textColorHint="#9E9E9E" />

        <Button
            android:id="@+id/btnSaveEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Entry"
            android:textColor="#FFFFFF"
            android:backgroundTint="#7B1FA2"
            android:drawableStart="@drawable/ic_save"
            android:drawablePadding="8dp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Support Circle -->
    <LinearLayout
        android:id="@+id/card_support"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/card_gradient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_journal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_group"
                android:tint="#7B1FA2"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support Circle"
                android:textColor="#4A148C"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Manage Support Circle Button -->
        <TextView
            android:id="@+id/btnManageSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Support Circle →"
            android:textColor="#7B1FA2"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add people who provide emotional support and wellness accountability"
            android:textColor="#6A1B9A"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:textStyle="italic" />

        <!-- Dynamic Contact List -->
        <LinearLayout
            android:id="@+id/layoutSupportList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
