<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Circular Avatar (Initials) -->
        <TextView
            android:id="@+id/tvInitials"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="AB"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/circle_background_purple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Contact Name -->
        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Emma Thompson"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tvInitials"
            app:layout_constraintTop_toTopOf="@id/tvInitials"
            app:layout_constraintEnd_toStartOf="@id/btnDelete" />

        <!-- Relationship -->
        <TextView
            android:id="@+id/tvRelationship"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Friend"
            android:textColor="#7B1FA2"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tvInitials"
            app:layout_constraintTop_toBottomOf="@id/tvContactName"
            app:layout_constraintEnd_toStartOf="@id/btnDelete" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="+254700123456"
            android:textColor="#757575"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/tvInitials"
            app:layout_constraintTop_toBottomOf="@id/tvRelationship"
            app:layout_constraintEnd_toStartOf="@id/btnDelete" />

        <!-- Primary Chip -->
        <TextView
            android:id="@+id/tvPrimaryBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary"
            android:background="@drawable/primary_chip_background"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvPhoneNumber"
            app:layout_constraintTop_toBottomOf="@id/tvRelationship" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:tint="#D32F2F"
            android:contentDescription="Delete contact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
